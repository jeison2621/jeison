<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>
    <body>
        <%- include('./partials/header') %>
            <main>
                <section class="seccion-newproduct">
                    <article class="contenedor-newproduct">
                        <h4>REGISTRARSE</h4>
                        <form method="post" action="/admin/users/newUser" enctype="multipart/form-data">

                            <div class="errors">
                                <ul>
                                </ul>
                              </div>

                            <div class="titulo">
                                <label for="name">Nombres(*)</label>
                                <input type="text" name="nombre" id="name">
                            </div>

                            <div class="titulo">
                                <label for="lastname">Apellidos(*)</label>
                                <input type="text" name="apellidos" id="lastname">
                            </div>

                            <div class="titulo">
                                <label for="email">Email(*)</label>
                                <input type="email" name="email" id="email">
                            </div>

                            <div class="titulo">
                                <label for="password">Contraseña(*)</label>
                                <input type="password" name="password" id="password">
                            </div>

                            <div class="titulo">
                                <label for="image">Foto de perfil(*)</label>
                                <input type="file" name="image" id="image">
                            </div>

                            <!-- Oculta -->
                            <div class="titulo" id="ocultar">
                                <label for="rol">Rol</label>
                                <select name="rol" id="rol">
                                  <option id="rol" value="2" selected>Cliente</option>
                                </select>
                              </div>

                            <p class="titulo">¿Ya tienes una cuenta? <a class="referencia" href="/login">Ingresa aquí</a></p>

                            <input type="submit" class="enviar"  value="Registrarse">
                        </form>
                    </article>
                </section>
            </main>
            <%- include('./partials/footer') %>
        <script src="/js/valitationsUsers.js"></script>
            
    </body>

</html>