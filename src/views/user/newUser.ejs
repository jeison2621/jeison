<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>
      <main>
        <section class="seccion-newproduct">
          <article class="contenedor-newproduct">
            <h4>NUEVO USUARIO</h4>
            <form action="/admin/users/newUser" method="post" enctype="multipart/form-data">

              <div class="titulo">
                <label for="name"> Nombre(s)</label>
                <input type="text" name="nombre" id="name">
              </div>

              <div class="titulo">
                <label for="lastname">Apellidos</label>
                <input type="text" name="apellidos" id="lastname">
              </div>

              <div class="titulo">
                <label for="email">Email</label>
                <input type="email" name="email" id="email">
              </div>

              <div class="titulo">
                <label for="password">Contrase√±a</label>
                <input type="password" name="password" id="password">
              </div>

              <div class="titulo">
                <label for="image">Avatar</label>
                <input type="file" name="image" id="image" accept="image/png, image/gif, image/jpeg">
              </div>

              <div class="titulo">
                <label for="rol">Rol</label>
                <select name="rol" id="rol">
                  <option id="rol" value="">Elija un rol</option>
                  <option id="rol" value="1">Administrador</option>
                  <option id="rol" value="2">Cliente</option>
                </select>
              </div>
              


              <div class="errors">
                <ul>
                </ul>
              </div>


              <input class="enviar_usuario" type="submit" value="Crear">
            </form>
          </article>
        </section>
      </main>
      <%- include('../partials/footer') %>
        <script src="/js/valitationsUsers.js"></script>
  </body>

</html>