<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>

  <body>

    <%- include('./partials/header') %>
      <main>

        
        <section class="banner">
          <div class="carrusel">
            <div class="carrusel-items">

              <div class="carrusel-item">
                <img src="/img/otras/maquillaje.jpg" alt="">
              </div>

              <div class="carrusel-item">
                <img src="/img/otras/descuento.jpg" alt="">

              </div>
              <div class="carrusel-item">
                <img src="/img/otras/banner.jpg" alt="">

              </div>

            </div>

              

          </div>

        </section>
 
          


          <section class="seccion-contenedora">
            <% if (data) { %>
              <% data.forEach(function(product){ %>
                <article class="articulo-productos">
                  <h2><%= product.name%></h2>
                
                  <div>
                    <a href="/<%= product.id%>"><img src="/img/products/<%= product.image%>" alt=""></a>
                  </div>
                  <div>
                    <p>-<%= product.discount%>% $<%= product.price%></p>
                  </div>
                </article>

                                            <% }); %>
              <% } %>
          </section>
      </main>



         <%- include('./partials/footer') %>
     <script src="/js/home.js"></script>

  </body>
  
</html>




